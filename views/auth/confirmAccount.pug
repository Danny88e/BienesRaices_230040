extends ../layout/index

block contenido 
    input(type="hidden" name="_csrf" value=csrfToken)
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=page

    div(class="bg-white shadow py-8 px-6 rounded-lg max-w-2xl mx-auto font-bold text-white uppercase")
        p(class= error ? 'bg-red-500':'bg-green-500').py-2.px-5.rounded-lg.w-full=message
        if error 
            a(href="http://localhost:3000/usuario/passwordRecovery" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Restaurar cuenta
        if !error
            a(href="http://localhost:3000/usuario/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Ya puedes iniciar sesión